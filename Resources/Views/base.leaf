<!doctype html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
            
            <title> #(title) </title>
            
            <base href="" />
            <link rel="stylesheet" href="/styles/pays.css" type="text/css" />
            <link rel="stylesheet" href="/styles/pays_form.css" type="text/css" />
            <link rel="stylesheet" href="/styles/naviBar.css" type="text/css" />
            <link rel="stylesheet" href="/styles/dynamicInputField.css" type="text/css"/>
            <link rel="stylesheet" href="/styles/style.css" type="text/css" /

            
           
            <meta name="viewport" content="width=device-width, initial-scale=0.8, maximum-scale=1, user-scalable=0" />
            
            
            
    </head>
    <body>
            <div class="topnav">
                
                
                    <a #if(title == "Home") {class= "active"} href="/countries">Landing</a>
                     <a #if(title == "Offres" || title == "Demandes") {class= "active"} href="/countries/ads?department=&offers=true">
                         Ads </a>
                 <!-- IF USER LOGGED IN = FALSE -->
                 #if(userLoggedIn == false) {
                    <a #if(title == "Login") {class= "active"} href="/login">Login!</a>
                                              
                    <a #if(title == "Register") {class= "active"} href="/register"> Register </a>
                    }
                #if(userLoggedIn) {
                <!-- IF USER LOGGED IN = TRUE -->
                    <a #if(title == "My Profile") {class= "active"} href="/self/index">My Profile</a>
 
                    <a href="/logout">Logout!</a>
                }
                <!-- IF USER LOGGED IN + ADMINUSER = TRUE -->
                #if(userLoggedIn == true && isAdmin == true) {
                
                    <a #if(title == "All the Ads") {class= "active"} href="/admin/index">All Ads</a>
                
                    <a #if(title == "Countries and Departments") {class= "active"} href="/admin/countries/all"> Countries and Departments</a>
        
                    <a #if(title == "Add Country") {class= "active"} href="/admin/add/country">Add Country</a>
                    
                    <a #if(title == "Add Department") {class= "active"} href="/admin/add/department">Add Department</a>
         
                    <a #if(title == "Create New Ad") {class= "active"} href="/self/new">Create New Ad</a>
                    
                    
                    }
                   
            </div>
            <div id="scrollContent">
            #get(content)
            <div id="footerMobileFrame"><div id="footerMobile"><div id="footerLogo">
                <p>&copy; 2019 gilets-jaunes-entraide.fr</p><img src="/Images/logo.svg" /></a>
            </div></div></div>
       


       
       
        <div id="footer"></div>
         </div>
        <!-- Script -->
       
       #if(showCookieMessage) {

               <footer id="cookie-footer">
                 <div id="cookieMessage" class="container">
                   <span class="muted">
        
                     This site uses cookies! To accept this, click
                     <a href="#" onclick="cookiesConfirmed()">OK.</a><a href="/cookies/"> Read more.</a>
                   </span>
                 </div>
               </footer>
       
               <script src="/script/cookie.js"></script>
             }
  
      
        <script src="/script/footer.js"></script>
        <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        <script type="text/javascript" src="/script/jquery-3.3.1.min.js"></script>
        <script type="text/javascript" src="/script/pays.js"></script>
        <script src="/script/dynamicInputField.js"></script>
        
        
        
      
    </body>
</html>


