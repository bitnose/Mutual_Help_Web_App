<!doctype html>
<html lang="fr">
    
    <head>
        <meta charset="UTF-8">
            
            
            <title> #(title) </title>
            
            <base href="" />
            <link rel="stylesheet" href="/styles/pays.css" type="text/css" />
            <link rel="stylesheet" href="/styles/pays_form.css" type="text/css" />
            
            <!-- <script type="text/javascript" src="script/jquery-3.3.1.min.js"></script> -->
            <!-- <script type="text/javascript" src="script/pays.js"></script> -->
        
            
            <meta name="viewport" content="width=device-width, initial-scale=0.8, maximum-scale=1, user-scalable=0" />
            
    </head>
    
    <body>
        
        
        <div id="scrollContent">
            
            
            
            <div id="centerFrame">
                <div id="introheader">
                    <img src="/Images/logo.svg" />
                </div>
                <div id="landingImage">
                    <img src="/Images/france.png" />
                </div>
                
                
                
                <div id="content">
                    <form action="/countries/ads" accept-charset="UTF-8" method="get">
                        
                        
                        <div class="selector">
                            <select name="country">
                                <option selected disabled hidden> Selectionnez votre Pays</option>
                                #for(country in countries) {
                                
                                <option value="#(country.id)">#(country.country.country)</option>
                    
                                }
                            </select>
                        </div>
                        
                        <div class="selector">
                            <select name="department">
                                <option selected disabled hidden> Selectionnez votre DÃ©partement</option>
                                
                                #for(data in countries) {
                                    #for(department in data.departments) {
                                    <option value="#(department.id)">#(department.departmentName)</option>
                                    }
                                
                                
                                }
                            </select>
                        </div>
                        <br />
                        <!--
                         <div class="formItem">
                         <p>Authorisation:</p>
                         <input type="text" name="authorisation" placeholder="Type Authorisation Code *" maxlength="80" required="required" />
                         </div>
                         -->
                        <input type="submit" name="submit" value="Allez!" />
                        <!--               <input type="reset" value="Clear"> -->
                    </form>
                </div>
                
                
                
            </div>
        
            <div id="footerMobileFrame"><div id="footerMobile"><div id="footerLogo">
                <p>&copy; 2019 gilets-jaunes-entraide.fr</p><a href="/countries"><img src="/Images/logo.svg" /></a>
            </div></div></div>
            
        </div>
        
        
        <div id="footer"></div>
        
        
        
        <!-- Script -->

        
        <script src="/script/footer.js"></script>
        
        
    </body>
</html>








